@using Vidly.Models;
@model IEnumerable<Customer>

<h1 style="margin-top : 30px">Customers</h1>

@if (Model.Count() == 0)
{
    <h3>There are customers available</h3>
}
else
{
    <table class="table table-bordered table-hover" style="margin-top : 15px">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Membership Type</th>
        </tr>
        @foreach (var customer in Model)
        {
            <tr>
                <th>@customer.Id</th>
                <th>@Html.ActionLink(customer.Name, "DisplayCustomerByID", "Customers", new { id = customer.Id }, null)</th>
                <th>@customer.MembershipType.Name</th>
            </tr>
        }
    </table>
}



