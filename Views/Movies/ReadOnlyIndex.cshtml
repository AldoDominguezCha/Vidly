@using Vidly.Models

@model List<Movie>

<h1 style="margin-top : 30px">Movies</h1>

<table class="table table-bordered table-hover" style="margin-top : 30px" id="movies">
    <thead>
    <tr>
        <th>Title</th>
        <th>Genre</th>
    </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function ()
        {
            let moviesTable = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc : ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data : "movieGenre.genreName"
                    }
                ]
            })
        });
    </script>
}


