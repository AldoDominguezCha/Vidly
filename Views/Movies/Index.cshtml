@using Vidly.Models

@model List<Movie>

<h1 style="margin-top : 30px">Movies</h1>

@Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary", style = "margin-top : 15px" })

@if (Model.Count() == 0)
{
    <h3>The are no movies available to show</h3>
}
else
{
    <table class="table table-bordered table-hover" style="margin-top : 30px">
        <tr>
            <th>ID</th>
            <th>Title</th>
        </tr>
        @foreach(var movie in Model)
        {
            <tr>
                <th>@movie.Id</th>
                <th>@Html.ActionLink(movie.Name, "DisplayMovieByID", "Movies", new { id = movie.Id }, null)</th>
            </tr>
        }
    </table>
}

